mixin slide(name)
  - const slots = {}
  mixin Slot(key)
    - slots[key] = block
  - block()
  li(class="main-slider__slide slide-" + name + ((name == "miss") ? " slide-active" : ""))
    .slide-presentation
      .slide-presentation__wrapper
        .container-fluid
          .slide-presentation__content
            - slots.presentation()
    .slide-content
      - slots.content()  